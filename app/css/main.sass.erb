/*------ VIEW GENERIC AND RESET ------*/
@font-face
    font-family: "decohomefont"
    src: url('<%= asset_data_uri("jandles.ttf") %>') format("truetype")
@font-face
    font-family: "ravie"
    src: url('<%= asset_data_uri("jandles.ttf") %>') format("truetype")
.ui-content
    max-width: 970px
    margin: auto
.b-wrap
    position: relative !important
    float: left !important
    left: auto !important
.b-wrap.b-wrap-left, .b-left
    right: 0px !important
.b-wrap.b-wrap-right, .b-right
    float: right !important
    left: 0px !important
.logo
    font-family: "decohomefont" !important //, Helvetica, Arial, sans-serif
    font-size: 47px
    color: white
.footer
    position: absolute
    bottom: 0px
    text-align: center
    width: 100%
*
    scroll: hidden

#mybook
    max-width: 738px !important
    max-height: 100%
    *
        max-height: 100%
    .b-page, .b-page .b-wrap
        max-width: 369px !important //370px !important
.ui-content
    padding: 0
    overflow-y: hidden
    overflow-x: none
    padding-top: 1%
    box-sizing: border-box
    position: relative
.ui-page
    background:
        image: url('background.jpg')
        size: 100% 100%
        repeat: no-repeat
    max-height: 100%
    max-width: 100%
img
    max-height: 100%
    width: 100%

.b-page
    box-sizing: border-box
    height: 100% !important
    max-width: 50%
.b-wrap
    //background-color: transparent !important
    height: auto !important
    max-height: 100%
.b-counter
    background-color: transparent !important
    font-weight: bold
    font-size: 12px
.b-arrow
    width: 12% !important
.b-arrow.b-arrow-next
    right: -13% !important
.b-arrow.b-arrow-prev
    left: -13% !important
.b-arrow div
    width: 100% !important
    background-size: 100% auto !important
    background-position: center center
    height: 100% !important
    top: 0 !important
.b-arrow-next
    float: right !important
.b-arrow-prev
    float: left !important

.b-arrow-next div
    background-position: center right !important
.b-arrow-prev div
    background-position: center right !important
    left: auto !important
    right: 0

.ui-header
    text-align: center
    background: transparent
    border: none
.title
    text-shadow: -1px -1px  6px rgb(200,200,200)
    font-size: 20px
    color: black
    font-style: italic
    font-family: 'ravie'
.ui-btn-inner, .ui-footer .ui-btn-inner, .ui-mini .ui-btn-inner
    padding: 0px
    margin: 0px
.ui-footer
    text-align: right
    background: transparent
    border-color: transparent
    .ui-btn, .ui-btn *
        //margin-right: 20px
        //.fcLink, .fcLink *
        background-size: 100% 100%
        background-position: center center
        background: transparent
        //border: none !important
        box-shadow: none !important
        webkit-box-shadow: none !important
    .ui-btn //:last-child
        margin-right: 25px
.footerIcon
    height: 45px
    width: 45px

.popup
    text-align: center
    .popupContent
        padding: 15px
    .infoMain
        font-size: 22px
        text-align: center
        margin-bottom: -12px
        .left
            float: left
        .contactLogo
            margin-bottom: 5px
    .info
        font-size: 17px
    .name
        font-size: 18px
        font-style: italic
    input
        text-align: center

    .facebook
        line-height: 60px
    .logo
        font-size: 20px
        color: rgb(64,64,250)
        color: inherit
    .fcLogo
        height: 40px
        width: 40px
    img
        height: 90px // !important
        width: auto //!important
    .cancel
        text-align: center !important
        span
            margin: auto
a.noUnderline
    text-decoration: none

//.ui-btn-inner
//    margin: 0 !important
.ui-btn
    border: 2px solid transparent !important
    border-radius: 9px
.ui-btn:hover
    //border: 2px solid orange !important
    box-shadow: 3px